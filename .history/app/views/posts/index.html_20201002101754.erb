<h1>Blog posts</h1>
<% @posts.each do |elem| %>
<div class="card" style="width: 18rem;">
  <img src="..." class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title"><%= elem.id %> : <%= elem.title %></h5>
    <p class="card-text"><%= elem.body %></p>
    <div><%= link_to "Read More", post_path(elem), :class => 'btn btn-default' %></div>
  </div>
</div>
<% end %>
