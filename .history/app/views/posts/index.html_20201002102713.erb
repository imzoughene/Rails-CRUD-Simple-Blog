<h1>Blog posts</h1>
<div class="row">
<% @posts.each do |elem| %>
    <div class="col-sm-4">
    <div class="card" style="width: 18rem;">
  <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcT4RNVSIH2AA2KY-dHFm9T0Q8P9By-uiLai2Q&usqp=CAU" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title"><b>(<%= elem.id %>)</b> <%= elem.title %></h5>
    <p class="card-text"><%= elem.body %></p>
    <div><%= link_to "Read More", post_path(elem), :class => 'btn btn-default' %></div>
  </div>
</div>
    </div>
<% end %>
</div>